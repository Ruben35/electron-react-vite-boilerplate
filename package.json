{
  "name": "electron-react-vite-boilerplate",
  "private": true,
  "version": "1.0.0",
  "author": "Ruben35",
  "description": "A fast and optimized ‚ö°Ô∏è Electron-React boilerplate üì¶ which uses Vite as frontend tooling üõ†Ô∏è.",
  "main": "electron/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently -k \"vite\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && electron-forge start",
    "package": "vite build && electron-forge package",
    "make": "vite build && electron-forge make"
  },
  "dependencies": {
    "electron-is-dev": "^2.0.0",
    "electron-squirrel-startup": "^1.0.0",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@vitejs/plugin-react": "^1.3.0",
    "concurrently": "^7.1.0",
    "electron": "^18.1.0",
    "vite": "^2.9.5",
    "wait-on": "^6.0.1"
  },
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "electron-react-vite-boilerplate",
        "asar": true
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "electron_react_vite_boilerplate"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ]
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  }
}
